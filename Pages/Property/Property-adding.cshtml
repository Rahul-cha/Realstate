                <div class="mb-4">
                    <label for="propertyPhotos" class="font-semibold">Property Photos:</label>
                    <input type="file" class="form-input mt-3" asp-for="PropAdd.Photos" id="propertyPhotos" accept=" image/jpeg, image/png, image/gif" onchange="previewImages(event)"  multiple required><br><br>
                  @*  <input type="file" accept="image/*" multiple onchange="previewImages(event)">*@
                    <div id="image-preview"></div>
                    <input type="hidden" id="selectedImages" name="selectedImages">

                    <script>
                        function previewImages(event) {
                            var previewContainer = document.getElementById('image-preview');

                            Array.from(event.target.files).forEach(function (file) {
                                var reader = new FileReader();

                                reader.onload = function (event) {
                                    var imageContainer = document.createElement('div');
                                    imageContainer.classList.add('image-container');

                                    var image = document.createElement('img');
                                    image.src = event.target.result;
                                    image.classList.add('preview-image');

                                    var closeButton = document.createElement('span');
                                    closeButton.classList.add('close-button');
                                    closeButton.innerHTML = '&times;';
                                    closeButton.addEventListener('click', function () {
                                        imageContainer.remove();
                                        updateSelectedImages();
                                    });

                                    imageContainer.appendChild(image);
                                    imageContainer.appendChild(closeButton);
                                    previewContainer.appendChild(imageContainer);
                                    updateSelectedImages();
                                };

                                reader.readAsDataURL(file);
                            });
                        }

                        function updateSelectedImages() {
                            var previewContainer = document.getElementById('image-preview');
                            var selectedImagesInput = document.getElementById('selectedImages');
                            var imageContainers = previewContainer.getElementsByClassName('image-container');
                            var selectedImages = [];

                            for (var i = 0; i < imageContainers.length; i++) {
                                var image = imageContainers[i].getElementsByTagName('img')[0];
                                selectedImages.push(image.src);
                            }

                            selectedImagesInput.value = selectedImages.join(',');
                        }
                    </script>

                    <style>
                        .image-container {
                            display: inline-block;
                            position: relative;
                            margin-right: 10px;
                            margin-bottom: 10px;
                        }

                        .preview-image {
                            max-width: 100%;
                            max-height: 200px; /* Adjust the height as needed */
                        }

                        .close-button {
                            position: absolute;
                            top: 5px;
                            right: 5px;
                            font-size: 20px;
                            color: #000;
                            cursor: pointer;
                        }
                    </style>





